@inherits LayoutComponentBase

<div class="main">
    <nav class="navbar">
        <AuthorizeView>
            <Authorized>
                <button class="navbar-toggler custom-toggler" type="button" aria-expanded="false" aria-label="Toggle navigation" @onclick="ToggleSidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a href="/" id="logo"><img src="https://www.skra.is/library/Myndir/Um-okkur/Tjodskra_ens_small.png?proc=250x250" alt="Thjodskra_logo"></a>
                <div class="dropdown">
                    <button class="btn" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="oi oi-person"></span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <div class="dropdown-content">
                            <p class="dropdown-item">@context.User.Identity.Name</p>
                            <a class="dropdown-item" href="#">Innsendar tilkynningar</a>
                            <form method="post" action="Identity/Account/LogOut">
                                <button type="submit" class="dropdown-item">Skrá út</button>
                            </form>
                        </div>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <a href="/"><img class="logo" src="https://www.skra.is/library/Myndir/Um-okkur/Tjodskra_ens_small.png?proc=250x250" alt="Thjodskra_logo"></a>
                <div>
                    <a class="navbar-actions" href="Identity/Account/Register">Register</a>
                    <a class="navbar-actions" href="Identity/Account/Login">Log in</a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>

    @if(showSidebar)
    {
        <div id="sidebar">
            <div class="sidebar-content">
                <a href="/makeAdmin" @onclick="ToggleSidebar">View users</a><br/>
            </div>
            <div class="sidebar-content">
                <a href="/create_notification" @onclick="ToggleSidebar">Create a new notification</a><br/>
            </div>
            <div class="sidebar-content" @onclick="ToggleSidebar">
                <a href="/Counter">Counter</a><br/>
            </div>
            <div class="sidebar-content" @onclick="ToggleSidebar">
                <a href="/todolist">To Do List</a><br/>
            </div>
        </div>
    }

    <div class="content px-4">
        @Body
    </div>
</div>

@code {

    bool showSidebar = false;

    void ToggleSidebar()
    {
        if(showSidebar == true)
        {
            showSidebar = false;
        }
        else
        {
            showSidebar = true;
        }
    }
}