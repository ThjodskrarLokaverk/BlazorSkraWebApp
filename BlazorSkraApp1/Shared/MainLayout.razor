@inherits LayoutComponentBase
<link href="https://fonts.googleapis.com/css2?family=Muli&display=swap" rel="stylesheet">
<section>
    <div class="skewed"></div>
    <div class="main">
        <nav class="navbar">
            <div class="container">
                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <div class="dropdown" title="Valmynd">
                            <button class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fas fa-bars fa-lg"></span>
                            </button>
                            <div class="first-dropdown-wrapper">
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="/">Forsíða</a>
                                    <a class="dropdown-item" href="/FormCreation">Búa til nýtt eyðublað</a>
                                    <a class="dropdown-item" href="/AllSubmissions">Allar innsendingar</a>
                                    <a class="dropdown-item" href="/userlist">Notendalisti</a>
                                    <a class="dropdown-item" href="/instructions">Notkunarleiðbeiningar</a>
                                    <a class="dropdown-item" href="/contact">Hafa samband</a>
                                </div>
                            </div>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="dropdown" title="Valmynd">
                            <button class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fas fa-bars fa-lg"></span>
                            </button>
                            <div class="first-dropdown-wrapper">
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="/">Forsíða</a>
                                    <a class="dropdown-item" href="/contact">Hafa samband</a>
                                    <a class="dropdown-item" href="https://www.skra.is">Skra.is</a>
                                </div>
                            </div>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
                <AuthorizeView>
                    <a class="header" href="/" title="Fara á forsíðu"> <img src="Images/SkraLogo.png" class="logo-img" alt="Skráargáttin" height="auto" width="300">  </a>
                    <div class="dropdown">
                        <button class="btn" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="oi oi-person"></span>
                        </button>
                        <div class="second-dropdown-wrapper">
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <span class=dropdown-item id="username">@context.User.Identity.Name</span>
                                <a class="dropdown-item" href="/Submissions">Mínar innsendingar</a>
                                <form class="logout" method="post" action="Identity/Account/LogOut">
                                    <button type="submit" class="dropdown-item">Skrá út</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </AuthorizeView>
            </div>
        </nav>

        <div class="content px-4 container">
            <div class="body">
                @Body
            </div>
        </div>
    </div>
</section>

