@using Microsoft.AspNetCore.Components

<!-- Confirmation modal. Add the attributes data-toggle="modal" and data-target="confirmationModal" to a 
     button html element on a page with an instance of this component to open this modal-->
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@CustomHeader</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@CustomBody</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn delete-btn" data-dismiss="modal" aria-label="Submit" @onclick="OnClick">@CustomButtonText</button>
                <button type="button" class="btn cancel-btn" data-dismiss="modal" aria-label="Close">@CustomCloseButtonText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter]
    public RenderFragment CustomHeader { get; set; }
    [Parameter]
    public RenderFragment CustomBody { get; set; }
    [Parameter]
    public RenderFragment CustomButtonText { get; set; }
    [Parameter]
    public RenderFragment CustomCloseButtonText { get; set; }
}
